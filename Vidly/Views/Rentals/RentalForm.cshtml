@model Vidly.ViewModels.RentalViewModel
@{
    ViewBag.Title = "RentalForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Rental</h2>
@using (Html.BeginForm("Save", "Rentals"))
{
    <div class="form-group">
        <b>Customer Name</b>
        @Html.ValueFor(m=>m.Customer.Name)
    </div>
    <div class="form-group">
        <b>Movie Name</b>
        @Html.ValueFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RentalDate)
        @Html.ValueFor(m => m.RentalDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReturnDate)
        @Html.TextBoxFor(m=>m.ReturnDate,"{0:d MMM yyyy}",new {@class="form-control",placeholder="eg 1 Jan 2017" })
        @Html.ValidationMessageFor(m=>m.ReturnDate)
    </div>

    @Html.HiddenFor(m => m.Id);

    <button type="submit" class="btn btn-primary">SaveRental</button>

}

